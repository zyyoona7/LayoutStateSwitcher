<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ViewStateSwitcher">
        <attr name="android:id"/>
    </declare-styleable>

    <declare-styleable name="StateLayout">
        <attr name="android:id"/>
        <attr name="content" format="reference"/>
        <attr name="loading" format="reference"/>
        <attr name="empty" format="reference"/>
        <attr name="error" format="reference"/>
        <attr name="custom" format="reference"/>
        <!--默认显示的view-->
        <attr name="default_state" format="enum">
            <enum name="loading" value="0"/>
            <enum name="content" value="1"/>
            <enum name="empty" value="2"/>
            <enum name="error" value="3"/>
            <enum name="custom" value="4"/>
        </attr>
    </declare-styleable>
</resources>